@model AnimalShelter.Models.Animal

@{
    ViewData["Title"] = "Delete Animal";
}

<h1>Delete Animal</h1>

<h3>Are you sure you want to delete this animal?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Species</dt>
        <dd class="col-sm-10">@Model.Species</dd>
        <dt class="col-sm-2">Age</dt>
        <dd class="col-sm-10">@Model.Age</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
